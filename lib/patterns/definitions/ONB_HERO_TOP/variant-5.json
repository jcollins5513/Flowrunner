{
  "family": "ONB_HERO_TOP",
  "variant": 5,
  "name": "Hero Top - Spacious",
  "description": "Spacious hero top layout with generous padding and gaps for premium feel.",
  "layout": {
    "structure": "grid",
    "gridTemplate": "1fr",
    "positions": {
      "hero_image": { "x": 0, "y": 0, "width": 1, "height": 1 },
      "title": { "x": 0, "y": 1, "width": 1, "height": 1 },
      "subtitle": { "x": 0, "y": 2, "width": 1, "height": 1 },
      "button": { "x": 0, "y": 3, "width": 1, "height": 1 },
      "text": { "x": 0, "y": 4, "width": 1, "height": 1 }
    }
  },
  "componentSlots": {
    "required": ["title", "subtitle", "button"],
    "optional": ["text"]
  },
  "spacing": {
    "padding": 48,
    "gap": 24
  },
  "responsive": {
    "breakpoints": {
      "mobile": {
        "padding": 24,
        "gap": 16
      },
      "tablet": {
        "padding": 36,
        "gap": 20
      },
      "desktop": {
        "padding": 48,
        "gap": 24
      }
    }
  },
  "imagePlacement": {
    "hero": {
      "position": "top",
      "size": "full"
    }
  }
}

