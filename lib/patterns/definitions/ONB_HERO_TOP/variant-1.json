{
  "family": "ONB_HERO_TOP",
  "variant": 1,
  "name": "Hero Stack - Text First",
  "description": "Hero section with text content first, then supporting image below. Perfect for onboarding where messaging takes priority.",
  "layout": {
    "structure": "grid",
    "gridTemplate": "1fr",
    "positions": {
      "title": { "x": 0, "y": 0, "width": 1, "height": 1 },
      "subtitle": { "x": 0, "y": 1, "width": 1, "height": 1 },
      "button": { "x": 0, "y": 2, "width": 1, "height": 1 },
      "hero_image": { "x": 0, "y": 3, "width": 1, "height": 3 }
    }
  },
  "componentSlots": {
    "required": ["title", "subtitle", "button"],
    "optional": ["text"]
  },
  "spacing": {
    "padding": 24,
    "gap": 16
  },
  "responsive": {
    "breakpoints": {
      "mobile": {
        "padding": 16,
        "gap": 12
      },
      "tablet": {
        "padding": 20,
        "gap": 14
      },
      "desktop": {
        "padding": 24,
        "gap": 16
      }
    }
  },
  "imagePlacement": {
    "hero": {
      "position": "bottom",
      "size": "full"
    }
  }
}

