{
  "family": "PRODUCT_DETAIL",
  "variant": 3,
  "name": "Specs Comparison",
  "description": "Product hero with adjacent spec grid and CTA ribbon.",
  "layout": {
    "structure": "grid",
    "gridTemplate": "1.4fr 1fr",
    "positions": {
      "hero_image": { "x": 0, "y": 0, "width": 1, "height": 4 },
      "title": { "x": 1, "y": 0, "width": 1, "height": 1 },
      "text": { "x": 1, "y": 1, "width": 1, "height": 1 },
      "subtitle": { "x": 1, "y": 2, "width": 1, "height": 1 },
      "button": { "x": 1, "y": 3, "width": 1, "height": 1 }
    }
  },
  "componentSlots": {
    "required": ["title"],
    "optional": ["subtitle", "text", "button", "image"]
  },
  "spacing": {
    "padding": 40,
    "gap": 24
  },
  "responsive": {
    "breakpoints": {
      "mobile": { "gridTemplate": "1fr", "padding": 20, "gap": 14 },
      "tablet": { "gridTemplate": "1fr 1fr", "padding": 28, "gap": 18 }
    }
  },
  "imagePlacement": {
    "hero": {
      "position": "left",
      "size": "contain"
    },
    "supporting": [
      { "position": "right-top", "size": "thumbnail" }
    ]
  }
}

