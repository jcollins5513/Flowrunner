{
  "family": "DEMO_DEVICE_FULLBLEED",
  "variant": 4,
  "name": "Device Showcase - Dual Column",
  "description": "Side-by-side device mockup and content with generous whitespace.",
  "layout": {
    "structure": "grid",
    "gridTemplate": "1.2fr 1fr",
    "positions": {
      "hero_image": { "x": 0, "y": 0, "width": 1, "height": 4 },
      "title": { "x": 1, "y": 0, "width": 1, "height": 1 },
      "subtitle": { "x": 1, "y": 1, "width": 1, "height": 1 },
      "text": { "x": 1, "y": 2, "width": 1, "height": 1 },
      "button": { "x": 1, "y": 3, "width": 1, "height": 1 }
    }
  },
  "componentSlots": {
    "required": ["title", "button"],
    "optional": ["subtitle", "text"]
  },
  "spacing": {
    "padding": 48,
    "gap": 32
  },
  "responsive": {
    "breakpoints": {
      "mobile": { "gridTemplate": "1fr", "padding": 24, "gap": 16 },
      "tablet": { "gridTemplate": "1fr 1fr", "padding": 36, "gap": 24 }
    }
  },
  "imagePlacement": {
    "hero": {
      "position": "left",
      "size": "contain"
    }
  }
}

