{
  "family": "DEMO_DEVICE_FULLBLEED",
  "variant": 5,
  "name": "Device Showcase - Hero Stack",
  "description": "Device hero with stacked callouts beneath for feature highlights.",
  "layout": {
    "structure": "grid",
    "gridTemplate": "1fr",
    "positions": {
      "hero_image": { "x": 0, "y": 0, "width": 1, "height": 2 },
      "title": { "x": 0, "y": 2, "width": 1, "height": 1 },
      "subtitle": { "x": 0, "y": 3, "width": 1, "height": 1 },
      "text": { "x": 0, "y": 4, "width": 1, "height": 1 },
      "button": { "x": 0, "y": 5, "width": 1, "height": 1 }
    }
  },
  "componentSlots": {
    "required": ["title", "subtitle", "button"],
    "optional": ["text"]
  },
  "spacing": {
    "padding": 56,
    "gap": 24
  },
  "responsive": {
    "breakpoints": {
      "mobile": { "padding": 28, "gap": 16 },
      "tablet": { "padding": 40, "gap": 20 }
    }
  },
  "imagePlacement": {
    "hero": {
      "position": "center",
      "size": "full"
    }
  }
}

