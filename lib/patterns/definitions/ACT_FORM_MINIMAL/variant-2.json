{
  "family": "ACT_FORM_MINIMAL",
  "variant": 2,
  "name": "Split Form Left",
  "description": "Text and form sit on left with subtle illustration on the right.",
  "layout": {
    "structure": "grid",
    "gridTemplate": "2fr 3fr",
    "positions": {
      "title": { "x": 0, "y": 0, "width": 1, "height": 1 },
      "subtitle": { "x": 0, "y": 1, "width": 1, "height": 1 },
      "form": { "x": 0, "y": 2, "width": 1, "height": 2 },
      "button": { "x": 0, "y": 4, "width": 1, "height": 1 },
      "hero_image": { "x": 1, "y": 0, "width": 1, "height": 5 }
    }
  },
  "componentSlots": {
    "required": ["title", "form"],
    "optional": ["subtitle", "text", "button"]
  },
  "spacing": {
    "padding": 36,
    "gap": 24
  },
  "responsive": {
    "breakpoints": {
      "mobile": { "gridTemplate": "1fr", "padding": 20, "gap": 16 },
      "tablet": { "gridTemplate": "1fr 1fr", "padding": 28, "gap": 20 }
    }
  },
  "imagePlacement": {
    "hero": {
      "position": "right",
      "size": "contain"
    }
  }
}

