{
  "family": "ACT_FORM_MINIMAL",
  "variant": 1,
  "name": "Stacked Form Hero",
  "description": "Single-column hero with headline, supporting copy, and compact form.",
  "layout": {
    "structure": "grid",
    "gridTemplate": "1fr",
    "positions": {
      "title": { "x": 0, "y": 0, "width": 1, "height": 1 },
      "subtitle": { "x": 0, "y": 1, "width": 1, "height": 1 },
      "text": { "x": 0, "y": 2, "width": 1, "height": 1 },
      "form": { "x": 0, "y": 3, "width": 1, "height": 1 },
      "button": { "x": 0, "y": 4, "width": 1, "height": 1 }
    }
  },
  "componentSlots": {
    "required": ["title", "form"],
    "optional": ["subtitle", "text", "button"]
  },
  "spacing": {
    "padding": 32,
    "gap": 16
  },
  "responsive": {
    "breakpoints": {
      "mobile": { "padding": 20, "gap": 12 },
      "tablet": { "padding": 24, "gap": 14 },
      "desktop": { "padding": 32, "gap": 16 }
    }
  },
  "imagePlacement": {
    "hero": {
      "position": "top",
      "size": "contain"
    }
  }
}

