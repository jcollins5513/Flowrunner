{
  "family": "ACT_FORM_MINIMAL",
  "variant": 4,
  "name": "Carded Form Grid",
  "description": "Form presented inside a centered card with optional bullet list.",
  "layout": {
    "structure": "grid",
    "gridTemplate": "1fr",
    "positions": {
      "title": { "x": 0, "y": 0, "width": 1, "height": 1 },
      "text": { "x": 0, "y": 1, "width": 1, "height": 1 },
      "form": { "x": 0, "y": 2, "width": 1, "height": 2 },
      "button": { "x": 0, "y": 4, "width": 1, "height": 1 },
      "subtitle": { "x": 0, "y": 5, "width": 1, "height": 1 }
    }
  },
  "componentSlots": {
    "required": ["title", "form"],
    "optional": ["text", "button", "subtitle"]
  },
  "spacing": {
    "padding": 48,
    "gap": 20
  },
  "responsive": {
    "breakpoints": {
      "mobile": { "padding": 24, "gap": 14 },
      "tablet": { "padding": 32, "gap": 16 }
    }
  },
  "imagePlacement": {
    "hero": {
      "position": "top",
      "size": "contain"
    }
  }
}

