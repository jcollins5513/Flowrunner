{
  "family": "NEWSLETTER_SIGNUP",
  "variant": 2,
  "name": "Split Newsletter with Image",
  "description": "Newsletter signup on left with supporting image or illustration on right.",
  "layout": {
    "structure": "grid",
    "gridTemplate": "1fr 1fr",
    "positions": {
      "title": { "x": 0, "y": 0, "width": 1, "height": 1 },
      "subtitle": { "x": 0, "y": 1, "width": 1, "height": 1 },
      "text": { "x": 0, "y": 2, "width": 1, "height": 1 },
      "form": { "x": 0, "y": 3, "width": 1, "height": 1 },
      "button": { "x": 0, "y": 4, "width": 1, "height": 1 },
      "hero_image": { "x": 1, "y": 0, "width": 1, "height": 5 }
    }
  },
  "componentSlots": {
    "required": ["title", "form"],
    "optional": ["subtitle", "button", "text"]
  },
  "spacing": {
    "padding": 40,
    "gap": 24
  },
  "responsive": {
    "breakpoints": {
      "mobile": { "gridTemplate": "1fr", "padding": 24, "gap": 16 },
      "tablet": { "gridTemplate": "1fr 1fr", "padding": 32, "gap": 20 },
      "desktop": { "gridTemplate": "1fr 1fr", "padding": 40, "gap": 24 }
    }
  },
  "imagePlacement": {
    "hero": {
      "position": "right",
      "size": "half"
    }
  }
}

