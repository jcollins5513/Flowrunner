{
  "family": "NEWSLETTER_SIGNUP",
  "variant": 1,
  "name": "Centered Newsletter Hero",
  "description": "Centered newsletter signup with headline, description, and inline form.",
  "layout": {
    "structure": "grid",
    "gridTemplate": "1fr",
    "positions": {
      "title": { "x": 0, "y": 0, "width": 1, "height": 1 },
      "subtitle": { "x": 0, "y": 1, "width": 1, "height": 1 },
      "text": { "x": 0, "y": 2, "width": 1, "height": 1 },
      "form": { "x": 0, "y": 3, "width": 1, "height": 1 },
      "button": { "x": 0, "y": 4, "width": 1, "height": 1 }
    }
  },
  "componentSlots": {
    "required": ["title", "form"],
    "optional": ["subtitle", "button", "text"]
  },
  "spacing": {
    "padding": 48,
    "gap": 20
  },
  "responsive": {
    "breakpoints": {
      "mobile": { "padding": 24, "gap": 16 },
      "tablet": { "padding": 36, "gap": 18 },
      "desktop": { "padding": 48, "gap": 20 }
    }
  },
  "imagePlacement": {
    "hero": {
      "position": "top",
      "size": "contain"
    }
  }
}

