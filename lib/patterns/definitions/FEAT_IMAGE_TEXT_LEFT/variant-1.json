{
  "family": "FEAT_IMAGE_TEXT_LEFT",
  "variant": 1,
  "name": "Text Left Image Right - Standard",
  "description": "Standard split layout with text content on left and image on right.",
  "layout": {
    "structure": "grid",
    "gridTemplate": "1fr 1fr",
    "positions": {
      "title": { "x": 0, "y": 0, "width": 1, "height": 1 },
      "subtitle": { "x": 0, "y": 1, "width": 1, "height": 1 },
      "text": { "x": 0, "y": 2, "width": 1, "height": 1 },
      "button": { "x": 0, "y": 3, "width": 1, "height": 1 },
      "hero_image": { "x": 1, "y": 0, "width": 1, "height": 3 }
    }
  },
  "componentSlots": {
    "required": ["title", "subtitle"],
    "optional": ["text", "button", "image"]
  },
  "spacing": {
    "padding": 32,
    "gap": 24
  },
  "responsive": {
    "breakpoints": {
      "mobile": {
        "gridTemplate": "1fr",
        "padding": 20,
        "gap": 16
      },
      "tablet": {
        "gridTemplate": "1fr 1fr",
        "padding": 24,
        "gap": 20
      },
      "desktop": {
        "gridTemplate": "1fr 1fr",
        "padding": 32,
        "gap": 24
      }
    }
  },
  "imagePlacement": {
    "hero": {
      "position": "right",
      "size": "half"
    }
  }
}

