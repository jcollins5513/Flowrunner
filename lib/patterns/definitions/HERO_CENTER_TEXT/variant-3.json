{
  "family": "HERO_CENTER_TEXT",
  "variant": 3,
  "name": "Centered Hero - Compact",
  "description": "Compact centered hero with minimal padding for dense layouts.",
  "layout": {
    "structure": "grid",
    "gridTemplate": "1fr",
    "positions": {
      "hero_image": { "x": 0, "y": 0, "width": 1, "height": 1 },
      "title": { "x": 0, "y": 0, "width": 1, "height": 1 },
      "subtitle": { "x": 0, "y": 0, "width": 1, "height": 1 },
      "button": { "x": 0, "y": 0, "width": 1, "height": 1 }
    }
  },
  "componentSlots": {
    "required": ["title"],
    "optional": ["subtitle", "button", "text"]
  },
  "spacing": {
    "padding": 24,
    "gap": 0
  },
  "responsive": {
    "breakpoints": {
      "mobile": {
        "padding": 16,
        "gap": 0
      },
      "tablet": {
        "padding": 20,
        "gap": 0
      },
      "desktop": {
        "padding": 24,
        "gap": 0
      }
    }
  },
  "imagePlacement": {
    "hero": {
      "position": "full-bleed",
      "size": "full"
    }
  }
}

