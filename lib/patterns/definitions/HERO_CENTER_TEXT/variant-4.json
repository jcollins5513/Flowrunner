{
  "family": "HERO_CENTER_TEXT",
  "variant": 4,
  "name": "Centered Hero - Spacious",
  "description": "Spacious centered hero with generous padding for premium feel.",
  "layout": {
    "structure": "grid",
    "gridTemplate": "1fr",
    "positions": {
      "hero_image": { "x": 0, "y": 0, "width": 1, "height": 1 },
      "title": { "x": 0, "y": 0, "width": 1, "height": 1 },
      "subtitle": { "x": 0, "y": 0, "width": 1, "height": 1 },
      "button": { "x": 0, "y": 0, "width": 1, "height": 1 }
    }
  },
  "componentSlots": {
    "required": ["title"],
    "optional": ["subtitle", "button", "text"]
  },
  "spacing": {
    "padding": 80,
    "gap": 0
  },
  "responsive": {
    "breakpoints": {
      "mobile": {
        "padding": 40,
        "gap": 0
      },
      "tablet": {
        "padding": 60,
        "gap": 0
      },
      "desktop": {
        "padding": 80,
        "gap": 0
      }
    }
  },
  "imagePlacement": {
    "hero": {
      "position": "full-bleed",
      "size": "full"
    }
  }
}

