{
  "family": "TESTIMONIAL_CARD_GRID",
  "variant": 3,
  "name": "Four Column Testimonials",
  "description": "Four-column grid for compact testimonial display.",
  "layout": {
    "structure": "grid",
    "gridTemplate": "repeat(4, 1fr)",
    "positions": {
      "title": { "x": 0, "y": 0, "width": 4, "height": 1 },
      "text": { "x": 0, "y": 1, "width": 4, "height": 1 },
      "image": { "x": 0, "y": 2, "width": 4, "height": 2 }
    }
  },
  "componentSlots": {
    "required": ["title"],
    "optional": ["text", "image"]
  },
  "spacing": {
    "padding": 48,
    "gap": 20
  },
  "responsive": {
    "breakpoints": {
      "mobile": { "gridTemplate": "1fr", "padding": 24, "gap": 12 },
      "tablet": { "gridTemplate": "repeat(2, 1fr)", "padding": 36, "gap": 16 },
      "desktop": { "gridTemplate": "repeat(4, 1fr)", "padding": 48, "gap": 20 }
    }
  },
  "imagePlacement": {
    "hero": {
      "position": "top",
      "size": "contain"
    },
    "supporting": [
      { "position": "center", "size": "small" }
    ]
  }
}

