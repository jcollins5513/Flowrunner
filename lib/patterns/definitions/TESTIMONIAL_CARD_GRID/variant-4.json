{
  "family": "TESTIMONIAL_CARD_GRID",
  "variant": 4,
  "name": "Single Column Testimonials",
  "description": "Single-column stacked testimonials for emphasis and readability.",
  "layout": {
    "structure": "grid",
    "gridTemplate": "1fr",
    "positions": {
      "title": { "x": 0, "y": 0, "width": 1, "height": 1 },
      "text": { "x": 0, "y": 1, "width": 1, "height": 1 },
      "image": { "x": 0, "y": 2, "width": 1, "height": 2 }
    }
  },
  "componentSlots": {
    "required": ["title"],
    "optional": ["text", "image"]
  },
  "spacing": {
    "padding": 48,
    "gap": 32
  },
  "responsive": {
    "breakpoints": {
      "mobile": { "padding": 24, "gap": 20 },
      "tablet": { "padding": 36, "gap": 24 },
      "desktop": { "padding": 48, "gap": 32 }
    }
  },
  "imagePlacement": {
    "hero": {
      "position": "top",
      "size": "contain"
    },
    "supporting": [
      { "position": "center", "size": "large" }
    ]
  }
}

