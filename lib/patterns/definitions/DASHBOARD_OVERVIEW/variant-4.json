{
  "family": "DASHBOARD_OVERVIEW",
  "variant": 4,
  "name": "Cards + Table",
  "description": "Three KPI cards on top with activity table beneath.",
  "layout": {
    "structure": "grid",
    "gridTemplate": "repeat(3, 1fr)",
    "positions": {
      "title": { "x": 0, "y": 0, "width": 3, "height": 1 },
      "subtitle": { "x": 0, "y": 1, "width": 3, "height": 1 },
      "image": { "x": 0, "y": 2, "width": 3, "height": 3 },
      "text": { "x": 0, "y": 5, "width": 2, "height": 1 },
      "button": { "x": 2, "y": 5, "width": 1, "height": 1 }
    }
  },
  "componentSlots": {
    "required": ["title"],
    "optional": ["subtitle", "text", "button", "image"]
  },
  "spacing": {
    "padding": 40,
    "gap": 20
  },
  "responsive": {
    "breakpoints": {
      "mobile": { "gridTemplate": "1fr", "padding": 18, "gap": 12 },
      "tablet": { "gridTemplate": "repeat(2, 1fr)", "padding": 28, "gap": 16 }
    }
  },
  "imagePlacement": {
    "hero": {
      "position": "center",
      "size": "contain"
    }
  }
}

