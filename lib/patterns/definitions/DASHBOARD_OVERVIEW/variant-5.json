{
  "family": "DASHBOARD_OVERVIEW",
  "variant": 5,
  "name": "Command Center",
  "description": "Split hero chart and checklist with secondary stats and CTA.",
  "layout": {
    "structure": "grid",
    "gridTemplate": "2fr 1fr",
    "positions": {
      "title": { "x": 0, "y": 0, "width": 2, "height": 1 },
      "subtitle": { "x": 0, "y": 1, "width": 2, "height": 1 },
      "image": { "x": 0, "y": 2, "width": 1, "height": 3 },
      "text": { "x": 1, "y": 2, "width": 1, "height": 2 },
      "button": { "x": 1, "y": 4, "width": 1, "height": 1 }
    }
  },
  "componentSlots": {
    "required": ["title"],
    "optional": ["subtitle", "text", "button", "image"]
  },
  "spacing": {
    "padding": 48,
    "gap": 24
  },
  "responsive": {
    "breakpoints": {
      "mobile": { "gridTemplate": "1fr", "padding": 20, "gap": 14 },
      "tablet": { "gridTemplate": "1fr 1fr", "padding": 30, "gap": 18 }
    }
  },
  "imagePlacement": {
    "hero": {
      "position": "left",
      "size": "cover"
    }
  }
}

