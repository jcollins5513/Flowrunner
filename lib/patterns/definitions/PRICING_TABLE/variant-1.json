{
  "family": "PRICING_TABLE",
  "variant": 1,
  "name": "Three Column Pricing",
  "description": "Three-column pricing table with centered header and equal-width pricing tiers.",
  "layout": {
    "structure": "grid",
    "gridTemplate": "repeat(3, 1fr)",
    "positions": {
      "title": { "x": 0, "y": 0, "width": 3, "height": 1 },
      "subtitle": { "x": 0, "y": 1, "width": 3, "height": 1 },
      "text": { "x": 0, "y": 2, "width": 3, "height": 1 },
      "button": { "x": 1, "y": 3, "width": 1, "height": 1 }
    }
  },
  "componentSlots": {
    "required": ["title"],
    "optional": ["subtitle", "text", "button"]
  },
  "spacing": {
    "padding": 48,
    "gap": 24
  },
  "responsive": {
    "breakpoints": {
      "mobile": { "gridTemplate": "1fr", "padding": 24, "gap": 16 },
      "tablet": { "gridTemplate": "repeat(2, 1fr)", "padding": 36, "gap": 20 },
      "desktop": { "gridTemplate": "repeat(3, 1fr)", "padding": 48, "gap": 24 }
    }
  },
  "imagePlacement": {
    "hero": {
      "position": "top",
      "size": "contain"
    }
  }
}

