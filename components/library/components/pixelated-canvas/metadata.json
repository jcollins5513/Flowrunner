{
  "name": "Aceternity UI",
  "slug": "pixelated-canvas",
  "description": "Convert any image to a pixelated canvas mouse distortion effects, as seen on Tailwind CSS Website.",
  "props": [
    {
      "Prop": "src",
      "Type": "string",
      "Default": "-",
      "Description": "Source image URL to sample and render.",
      "Required": "Yes"
    },
    {
      "Prop": "width",
      "Type": "number",
      "Default": "400",
      "Description": "Canvas display width in CSS pixels.",
      "Required": "No"
