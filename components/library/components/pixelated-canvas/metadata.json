    {
      "Prop": "height",
      "Type": "number",
      "Default": "500",
      "Description": "Canvas display height in CSS pixels.",
      "Required": "No"
    },
    {
      "Prop": "cellSize",
      "Type": "number",
      "Default": "3",
      "Description": "Size of each sampling cell in CSS pixels.",
      "Required": "No"
    },
    {
      "Prop": "dotScale",
      "Type": "number",
      "Default": "0.9",
      "Description": "Dot size as a fraction of cell size (0..1).",
